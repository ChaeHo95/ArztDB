<mapper namespace = "com.example.ArztDB.mapper.ProductMapper">

    <insert id="productInsert" parameterType="ProductVo">
        insert into product values(#{productId},#{title},#{brand},#{category1},#{category2},#{category3},#{image},#{lprice},#{mallName},default)
    </insert>

